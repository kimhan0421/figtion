{
  "name": "figtion",
  "version": "1.0.0",
  "description": "WidgetTemplate",
  "packageManager": "yarn@4.1.1",
  "private": true,
  "scripts": {
    "dev": "concurrently -n notion-ui,widget,server \"yarn workspace @figtion/notion-ui dev\" \"yarn workspace @figtion/widget dev\" \"yarn workspace @figtion/server dev:server\"",
    "tsc": "concurrently \"yarn workspace @figtion/widget tsc:main\" \"yarn workspace @figtion/notion-ui tsc\"",

  "build:production": "yarn workspace @figtion/notion-ui build:ui && yarn workspace @figtion/widget build:main -- --minify && yarn copy:manifest",
  "copy:manifest": "cp manifest.json dist/manifest.json",
  "dev:server": "yarn workspace @figtion/server dev:server"
  },
  "workspaces": ["packages/*"],
  "license": "MIT License",
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.49.0",
    "@figma/widget-typings": "^1.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "concurrently": "^9.1.0",
    "esbuild": "^0.13.5",
    "prettier": "^2.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^2.5.2",
    "vite-plugin-singlefile": "^0.5.1"
  }
}
